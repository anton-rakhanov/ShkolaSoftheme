<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Signar</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <script src="@Url.Content("~/Scripts/navbar-menu.js")" type="text/javascript"></script>
    <link href="@Url.Content("~/Content/navbar-menu.css")" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="http://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.4.0/css/font-awesome.min.css">
    <link href="@Url.Content("~/Content/asignar-styles.css")" rel="stylesheet" type="text/css" />

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*@Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-header pull-left">
                    <li><img src="~/Content/img/logo.png" class="navLogo leftM"/></li>
                    <li>@Html.ActionLink("Project", "Index", "Home", htmlAttributes: new {@class = "navTextH navHL" })</li>
                    <li>@Html.ActionLink("Users", "About", "Home", htmlAttributes: new { @class = "navTextH navHL" })</li>
                    <li>@Html.ActionLink("Filters", "Contact", "Home", htmlAttributes: new { @class = "navTextH navHL" })</li>
                    <li><button class="navButton"><t class="icon-plus"></t> &nbsp;Create task</button></li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Signar</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
