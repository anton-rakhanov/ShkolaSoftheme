@model Signar.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset password";
}

@using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="Input">
    @Html.HiddenFor(model => model.Code)
    <div class="form-group">
        <div class="col-md-12">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control backColor psswrd", placeholder = "Password" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-12">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control backColor psswrd dwnpsswrd", placeholder = "Confirmation Password" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-12">
            <input type="submit" class="btn btn-default fgtPswdSubmit" value="Reset" style="margin-top: 10px !important;"/>
        </div>
    </div>
    @Html.ActionLink("Login", "Login", "Account", htmlAttributes: new { @class = "color2 LoginLink", style="line-height: 24px !important"})
     </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
