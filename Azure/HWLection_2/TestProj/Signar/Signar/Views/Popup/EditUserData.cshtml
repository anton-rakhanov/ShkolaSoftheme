        color: rgb(248, 254, 254);
        font-size: 18px;
    }

    .edit-avatar-link {
        color: rgb(116, 161, 200) !important;
        text-decoration: underline;
        font-weight: 100;
        font-size: 12px;

    }

    .edit-avatar-link:hover{
        color: #4D868D !important;
    }
