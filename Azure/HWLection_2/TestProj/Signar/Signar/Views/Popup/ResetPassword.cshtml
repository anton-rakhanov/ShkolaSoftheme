<link href="~/Content/popup.css" rel="stylesheet" />

<div id="createUserPopup" class="table-responsive">
    <div class="row">
        <div class="col-xs-6">
            <input type="password" class="form-control popup-field" placeholder="Password" />
            @* @Html.TextBox("Password", null, "", htmlAttributes: new { @class = "form-control popup-field", placeholder = "Password" })*@
        </div>
        <div class="col-xs-6">
            @*@Html.TextBox("Password", null, "", htmlAttributes: new { @class = "form-control popup-field", placeholder = "Confirmation password" })*@
            <input type="password" class="form-control popup-field" placeholder="Reset password" />
        </div>
    </div>

</div>


<script type="text/javascript">
    $(document).ready(

        function showPopup() {
            $("#createUserPopup").css({ 'display': "visible" });
            $("#createUserPopup").dialog({
                width: 600,
                fluid: true,
                title: "Change password",
                modal: true,
                resizable: false,
                buttons: [
            {
                text: "Change",
                "class": 'popup-button',
                click: function () {
                    $(this).dialog("close");
                }
            },
                ],
                close: function () {
                }
            });
            $("*").trigger('blur');
        }

        );
</script>

