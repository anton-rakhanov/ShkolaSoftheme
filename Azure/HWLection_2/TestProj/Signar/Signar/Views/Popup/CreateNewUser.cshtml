<link href="~/Content/popup.css" rel="stylesheet" />

<div id="createUserPopup" class="table-responsive">

    <div class="row">
        <div class="col-xs-5">
            @Html.TextBox("Name", null, "", htmlAttributes: new { @class = "form-control popup-field", placeholder = "Name" })
        </div>
        <div class="col-xs-7">
            @Html.TextBox("Surname", null, "", htmlAttributes: new { @class = "form-control popup-field", placeholder = "Surname" })
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12">
            @Html.TextBox("Email", null, "", htmlAttributes: new { @class = "form-control popup-field", placeholder = "Email" })
        </div>
    </div>

    <div class="row">
        <div class="col-xs-4">
            <input type="password" class = "form-control popup-field" placeholder = "Password"/>
      @* @Html.TextBox("Password", null, "", htmlAttributes: new { @class = "form-control popup-field", placeholder = "Password" })*@
        </div>
        <div class="col-xs-4">
            @*@Html.TextBox("Password", null, "", htmlAttributes: new { @class = "form-control popup-field", placeholder = "Confirmation password" })*@
            <input type="password" class="form-control popup-field" placeholder="Reset password" />
        </div>
        <div class="container col-xs-4" id="wrap">
            <div class="btn-group">
                <button type="button" class="btn btn-default dropdown-toggle popup-dropdown" data-toggle="dropdown" >Role <span class="popup-arrow icon-arrow1 pull-right"></span></button>
                <ul class="dropdown-menu scrollable-menu" role="menu">
                    <li><a href="#">Common user</a></li>
                    <li><a href="#">Administrator</a></li>
                </ul>
            </div>

                

        </div>

    </div>

</div>


<script type="text/javascript">
    $(document).ready(

        function showPopup() {
            $("#createUserPopup").css({ 'display': "visible" });
            $("#createUserPopup").dialog({
                width: 600,
                fluid: true,
                title: "Create new user",
                modal: true,
                resizable: false,
                buttons: [
            {
                text: "Create",
                "class": 'popup-button',
                click: function () {
                    $(this).dialog("close");
                }
            },
                ],
                close: function () {
                }
            });
            $("*").trigger('blur');
        }

        );
</script>

